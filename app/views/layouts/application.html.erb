<!DOCTYPE html>
<html>
  <head>
    <title>Glitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% twitter_card = get_twitter_card_info(@tweet ? @tweet : nil) %>
    <meta name="twitter:card" content=<%=twitter_card[:card]%> />
    <meta property="og:url" content=<%=twitter_card[:url]%> />
    <meta property="og:title" content=<%=twitter_card[:title]%> />
    <meta property="og:description" content=<%=twitter_card[:description]%> />
    <meta property="og:image" content=<%=twitter_card[:image]%> />
    <meta http-equiv="refresh" content=" 0; url=<%=twitter_card[:url]%>">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div style="margin-top: 50px; margin-bottom:15px;">
    <img src="/assets/logoM.png" class="center-block">
    </div>
    <%= yield %>
  </body>
</html>
