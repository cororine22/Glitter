<div align="center">
  <div class="form-group">
    <%= form_tag("/tweet/create") do %>
        <% unless @errors.empty? %>
          <div class="alert alert-warning" style="display: inline-block;" align="left">
            <ul>
            <% @errors.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group form-inline">
            <label>https://github.com/</label>
            <input class="form-control" style="width:20%; margin-bottom:15px;" name="url" value=" <%= @chrome_url %>">
        </div>
        <input type="submit" class="btn btn-primary" value="Tweet" >
    <% end %>
  </div>
</div>